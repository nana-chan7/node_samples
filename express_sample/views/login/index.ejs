<h2>Login Page</h2>

<form action="/auth" method="post">
    <div>
        <label>ログイン名</label>
        <input class="form-control" type="text" name="login_name" placeholder="Email">
    </div>
    <div>
        <label>パスワード</label>
        <input class="form-control" type="password" name="password" placeholder="Password">
    </div>
    <div>
        <button>Login</button>
    </div>
</form>